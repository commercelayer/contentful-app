import{__rest}from"tslib";import authenticate from"./authenticate";export default async function clientCredentials(args){const{scope,endpoint,clientSecret=""}=args,obj=__rest(args,["scope","endpoint","clientSecret"]),config=Object.assign(Object.assign({},obj),{clientSecret,accessTokenUri:`${endpoint}/oauth/token`,redirectUri:""});return authenticate({type:"clientCredentials",config,scope})}