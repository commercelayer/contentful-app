import authenticate from"./authenticate";const salesChannel=async({clientId,endpoint,scope},user)=>{if(!scope)throw new Error("scope param is required.");const config={clientId,clientSecret:"",accessTokenUri:`${endpoint}/oauth/token`,redirectUri:void 0,username:user==null?void 0:user.username,password:user==null?void 0:user.password};return user?authenticate({type:"owner",config,scope}):authenticate({type:"clientCredentials",config,scope})};export default salesChannel;